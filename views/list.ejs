<%- include('header') -%>
    <h1>Favorite Films</h1>
    <div class="films-list">
        <ul>
            <% for(var i = 0; i < list.length; i++) { %>
                <div class="list-item">
                    <form action="/" method="post">
                        <li>
                            <textarea class="item-value" name="listItem"><%= list[i].title %></textarea>
                            <button class="list-button word-wrap" type="submit"><%= list[i].title %></button>
                        </li>
                        <% if(list[i].isFavorite) {%>
                            <!-- If it is a favorite movie - add a star to its name -->
                            <span class="fa fa-star star"></span>
                        <% } %>
                    </form>
                    <br>
                </div>
            <% }; %>
        </ul>
        
    </div>

<%- include('footer') -%>